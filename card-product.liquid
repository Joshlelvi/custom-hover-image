{% assign second_image_number = 3 %}

{% assign image_to_show = second_image_number | minus:1 %}
{% assign storedevs_image_on_hover = card_product.media[image_to_show] %}

{%- if storedevs_image_on_hover != nil and show_secondary_image -%}

<img
srcset="
{%- if storedevs_image_on_hover.width >= 165 -%}{{ storedevs_image_on_hover | image_url: width: 165 }} 165w,{%- endif -%}
{%- if storedevs_image_on_hover.width >= 360 -%}{{ storedevs_image_on_hover | image_url: width: 360 }} 360w,{%- endif -%}
{%- if storedevs_image_on_hover.width >= 533 -%}{{ storedevs_image_on_hover | image_url: width: 533 }} 533w,{%- endif -%}
{%- if storedevs_image_on_hover.width >= 720 -%}{{ storedevs_image_on_hover | image_url: width: 720 }} 720w,{%- endif -%}
{%- if storedevs_image_on_hover.width >= 940 -%}{{ storedevs_image_on_hover | image_url: width: 940 }} 940w,{%- endif -%}
{%- if storedevs_image_on_hover.width >= 1066 -%}{{ storedevs_image_on_hover | image_url: width: 1066 }} 1066w,{%- endif -%}
{{ storedevs_image_on_hover | image_url }} {{ storedevs_image_on_hover.width }}w
"
src="{{ storedevs_image_on_hover | image_url: width: 533 }}"
sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
alt=""
class="motion-reduce"
loading="lazy"
width="{{ storedevs_image_on_hover.width }}"
height="{{ storedevs_image_on_hover.height }}"

{%- endif -%}
